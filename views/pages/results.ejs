<!-- THIS PAGE DISPLAYS JOB SEARCH RESULTS. -->
<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>

<body class="container">

	<header>
		<% include ../partials/header %>
	</header>

	<main>
		<div class="jumbotron">
			<p>Jobs near <span class="capitalize"><%- searchLocation %></span></p>
			<% if(typeof(resultsJobQuery) !== 'undefined') { %>
			<p>Your search for "<%- resultsJobQuery %>" near <span class="capitalize"><%- searchLocation %></span> returned <%- searchTotalResults %> results.</p>
			<% } %>			
			
			<% include ../partials/search-form %>
			<div class="well">
				<ul style="list-style: none;">
					<% searchResults.forEach(function(result) { %>
					<li><a href="<%= result.url %>" target="Indeed"><%= result.jobtitle.toUpperCase() %></a></li>
					<li><%= result.company %> - <%= result.formattedLocation %></li>
					<li><i><%= result.formattedRelativeTime %></i></li>
					<% if(result.sponsored) { %>
					<li>Sponsored</li>
					<% } %>
					<hr>
					<% }); %>
				</ul>
				<hr>
			</div>
		</div>
	</main>

	<footer>
		<% include ../partials/footer %>
	</footer>

</body>
</html>