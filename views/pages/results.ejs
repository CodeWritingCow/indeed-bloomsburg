<!-- THIS PAGE DISPLAYS JOB SEARCH RESULTS. -->
<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>

<body class="container">

	<header>
		<% include ../partials/header %>
	</header>

	<main>
		<div class="jumbotron">
			<h1>Job Hunters</h1>
			<p>Jobs near <%- searchLocation %>.</p>
			<% include ../partials/search-form %>
			<div class="well">
				<ul style="list-style: none;">
					<% searchResults.forEach(function(result) { %>
					<li><a href="<%= result.url %>" target="_blank"><%= result.jobtitle.toUpperCase() %></a></li>
					<li><%= result.company %> - <%= result.formattedLocation %></li>
					<li><i><%= result.formattedRelativeTime %></i></li>
					<li>Sponsored: <%= result.sponsored %></li>
					<hr>
					<% }); %>
				</ul>
				<hr>
			</div>
		</div>
	</main>

	<footer>
		<% include ../partials/footer %>
	</footer>

</body>
</html>